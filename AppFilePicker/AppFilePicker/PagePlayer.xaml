<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppFilePicker.PagePlayer">
    <ContentPage.Content>
        <StackLayout>
            <Button x:Name="button_picker" Text="Pick a file" Clicked="PickFile"></Button>
            <StackLayout Orientation="Horizontal">
                <Button x:Name="button_player" Text="Play/Pause" Clicked="PlayPause"></Button>
            </StackLayout>
            
            
        </StackLayout>
    </ContentPage.Content>
</ContentPage>